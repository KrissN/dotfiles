	name = Chris St. Pierre
	email = chris.a.st.pierre@gmail.com

[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto

[alias]
        ci = commit
        co = checkout
        st = status
        review = "!git push origin HEAD:refs/for/$(git rev-parse --abbrev-ref HEAD)"
        story  = "!git push origin origin:refs/heads/story/fb$1_$2; git fetch origin; git co story/fb$1_$2"
        upstream = "!git remote -v | grep -q dotfiles || ( git reset --hard @{upstream}; git pull --rebase; git clean -dffx; git gc )"
        amicta = "!tito tag && git push && git push --tags"
        # we frequently have local changes to dotfiles, so this makes it easier to push commits
        pushdot = "!git stash && git pull --rebase && git push && git stash apply"

[push]
        default = current
