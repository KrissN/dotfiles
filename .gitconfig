[user]
	name = Chris St. Pierre
	email = chris.a.st.pierre@gmail.com

[color]
	diff = auto
	status = auto
	branch = auto
	ui = auto

[alias]
        ci = commit
        co = checkout
        st = status
        upstream = "!git remote -v | grep -q dotfiles || ( git reset --hard @{upstream}; git pull --rebase; git clean -dffx; git gc )"
        fix-merge = "!git checkout $1 && git upstream && git checkout $2 && git upstream && git merge $1"
        hist = "log --pretty=format:\"%h %ad | %s%d [%an]\" --date=short"
        clone-fork = "!~/bin/clone-with-fork.sh $1 $2"
        reviewer = "!~/bin/add-gerrit-reviewer.sh $@"
        # we frequently have local changes to dotfiles, so this makes it easier to pull and push commits
        pulldot = "!git stash && git pull --rebase && git stash apply"
        pushdot = "!git stash && git pull --rebase && git push && git stash apply"

[push]
        default = current
